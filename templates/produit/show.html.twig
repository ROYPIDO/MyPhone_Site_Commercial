{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
  <div class="container">

  <div class="row">
  
    <div class="col-8">

	<h1>Produit</h1>
    <div class="btn-group" role="group" aria-label="Basic example">
      <a href="{{ path('app_produit_index') }}" class="btn btn-primary">
        <i class="fas fa-undo"></i>
      </a>

      <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">
        <i class="fas fa-edit"></i>
      </a>
      {{ include('produit/_delete_form.html.twig') }}

      <button type="button" class="btn btn-primary">Right</button>
    </div>

    <table class="table">
      <tbody>
        <tr>
          <th>Id</th>
          <td>{{ produit.id }}</td>
        </tr>
        <tr>
          <th>Name</th>
          <td>{{ produit.name }}</td>
        </tr>
        <tr>
          <th>Description</th>
          <td>{{ produit.description }}</td>
        </tr>
        <tr>
          <th>Prix</th>
          <td>{{ produit.prix }}</td>
        </tr>
        <tr>
          <th>Quantity</th>
          <td>{{ produit.quantity }}</td>
        </tr>
        <tr>
          <th>Ref</th>
          <td>{{ produit.ref }}</td>
        </tr>
        <tr>
          <th>Image</th>
          <td><img src="{{ asset('images/' ~ produit.image ) }}" alt="" style="width: 100px"></td>
        </tr>
      </tbody>
    </table>
	
	
	</div>
	<div class="col-4">
	
	 {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
	<hr>
	{% for pictur in produit.picturs %}
		<img src="{{ asset('images/' ~ pictur.name ) }}" alt="" style="width: 50px">
		 {{ include('picturs/_delete_form.html.twig') }}
	{% endfor %}

	
	
	</div>
  
  
  </div>

    

    <hr>
   
  </div>

{% endblock %}
