
<div class="border m-1  p-2">
{{ form_start(form) }}


  <div class="row ">
    
     <div class="col-6">
        {{ form_row(form.name)}}
     </div>
     <div class="col-3">
       {{ form_row(form.category)}}
     </div>
     <div class="col-3">
       {{ form_row(form.ref)}}
     </div>
    </div>
    {{ form_row(form.description)}}
    
     <div class="row">
    
     <div class="col-4">
        {{ form_row(form.prix)}}
     </div>
     <div class="col-4">
       {{ form_row(form.quantity)}}
     </div>
      <div class="col-4">
       {{ form_row(form.image)}}
     </div>
    </div>




  

    <button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

</div>

