{% extends 'base.html.twig' %}

{% block title %}Picturs index{% endblock %}

{% block body %}
    <h1>Picturs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pictur in picturs %}
            <tr>
                <td>{{ pictur.id }}</td>
                <td>{{ pictur.name }}</td>
                <td>
                    <a href="{{ path('app_picturs_show', {'id': pictur.id}) }}">show</a>
                    <a href="{{ path('app_picturs_edit', {'id': pictur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_picturs_new') }}">Create new</a>
{% endblock %}
