{% extends 'base.html.twig' %}

{% block title %}Carousel index{% endblock %}

{% block body %}
    <h1>Carousel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Description</th>
                <th>Alt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carousel in carousels %}
            <tr>
                <td>{{ carousel.id }}</td>
                <td>{{ carousel.name }}</td>
                <td>{{ carousel.title }}</td>
                <td>{{ carousel.description }}</td>
                <td>{{ carousel.alt }}</td>
                <td>
                    <a href="{{ path('app_carousel_show', {'id': carousel.id}) }}">show</a>
                    <a href="{{ path('app_carousel_edit', {'id': carousel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_carousel_new') }}">Create new</a>
{% endblock %}
